@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<div class="row">
    <div class="col col-sm-12 m4 offset-m4">
        <section class="card">
            <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="card-action teal white-text">
                    <h3>2FA Log In</h3>
                </div>
                <div class="card-content">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group input-field col s12">
                        <input asp-for="Input.TwoFactorCode" id="2fa" class="form-control" />
                        <label asp-for="Input.TwoFactorCode" for="2fa">Two-Factor Code</label>
                        <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                    </div>
                    <div class="form-group input-field col s12">
                        <input asp-for="Input.RememberMachine" id="rm" class="form-control" />
                        <label asp-for="Input.RememberMachine" for="rm">Remember Machine</label>
                        <span asp-for="Input.RememberMachine" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn-large waves-effect waves-dark" style="width:100%;margin-top:4%">Log in</button>
                    </div>
                </div>
            </form>
        </section>
        <div class="form-group col s12 center">
            <p>
                Don't have access to your authenticator device? You can
                <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
            </p>
        </div>
    </div>
