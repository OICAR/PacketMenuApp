@model CatererViewModel

@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Excel/_Index.cshtml"  />

<br />
<div class="row">
    <div class="col col-sm-12 m4 offset-m4">
        <section class="card">
            <form enctype="multipart/form-data" asp-action="Create">
                <div class="card-action blue white-text">
                    <h3>Caterer Registration</h3>
                </div>
                <div class="row">
                    <div class="col s12">
                        <ul class="tabs">
                            <li class="tab col s3">
                                <a href="#name" class="active">Name</a>
                            </li>
                            <li class="tab col s3">
                                <a href="#foodMenu">Food Menu</a>
                            </li>
                            <li class="tab col s3">
                                <a href="#facility">Facility</a>
                            </li>
                            <li class="tab col s3">
                                <a href="#finish">FINISH</a>
                            </li>
                        </ul>
                    </div>

                    <div id='name' class="col s12 center">
                        <div class="form-group input-field col s12">
                            <input asp-for="CatererName" id="catererName" class="form-control" required="" aria-required="true"/>
                            <label for="catererName"> Caterer Name</label>
                            <span asp-validation-for="CatererName" class="text-danger"></span>
                        </div>
                        <a id="btnFM" class="waves-effect waves-light btn blue center" style="margin-bottom:2%"><i class="material-icons">arrow_forward</i></a>
                    </div>
                    <div id='foodMenu' class="col s12 center">
                        <div class="form-group file-field input-field col s12">
                            <div class="btn blue">
                                <span>File</span>
                                <input type="file">
                            </div>
                            <div class="file-path-wrapper">
                                <input asp-for="FormDocument" class="file-path validate" type="text" placeholder="Upload the food menu file." required="" aria-required="true">
                                <input asp-for="FormDocument" class="file-path validate" />
                            </div>
                        </div>
                        <a id="btnFac" class="waves-effect waves-light btn blue center" style="margin-bottom:2%"><i class="material-icons">arrow_forward</i></a>
                    </div>
                    <div id='facility' class="col s12 center">
                        <div class="form-group input-field col s12">
                            <input asp-for="CateringFacilitiName" type="text" id="facilityName" class="form-control" required="" aria-required="true"/>
                            <label for="facilityName">Catering Facility Name</label>
                        </div>
                        <div hidden class="form-group row">
                            <div class="col-sm-10">
                                <label asp-for="Address" class="col-sm-2
                        col-form-label"></label>
                            </div>
                            <input class="form-control" id="formatted-address" asp-for="Address" required="" aria-required="true"/>
                        </div>
                        <div class="form-group input-field col s12">
                            <input type="text" id="location-input"
                                   class="form-control">
                            <label for="address">Address</label>
                        </div>
                        <div id="formatted-components"></div>
                        <div class="container">
                            <div class="col-md-4 center">
                                <input type="button" name="Upload" value=" Google Submit" id="btngoogleupload" class="btn btn-primary blue" required="" aria-required="true"/>
                            </div>
                        </div>
                        <br />
                        <a id="btnFinish" class="waves-effect waves-light btn blue center" style="margin-bottom:2%"><i class="material-icons">arrow_forward</i></a>
                    </div>
                    <div id='finish' class="col s12 center">
                        <div class="form-group">
                            <button type="submit" class="btn-large waves-effect waves-dark blue" style="width:100%;margin-top:4%">Register</button>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('ul.tabs').tabs();
        $("#btnFM").click(function () {
            $('ul.tabs').tabs('select', 'foodMenu');
        });
        $("#btnFac").click(function () {
            $('ul.tabs').tabs('select', 'facility');
        });
        $("#btnFinish").click(function () {
            $('ul.tabs').tabs('select', 'finish');
        });
    });
</script>
<partial name="~/Views/GoogleMaps/_GoogleMapsPart.cshtml" />
<div>
    <a asp-action="Index">Back to List</a>
</div>

